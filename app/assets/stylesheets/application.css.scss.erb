/*
 *  Global constants
 */

$color: #444;
$color-light: #888;
$color-muted: #aaa;
$color-anchor: #ac498f;
$color-anchor-hover: #c23b00;
$color-selection: #ffa0fa;
$color-light-background: #f3f3f3;
$input-height: 36px;
$separator-height: 16px;
$footer-height: $separator-height + 64px;
$stack-width: 900px;

/* Mixins */

@mixin vertical-gradient($top, $bottom) {
  background: $top; /* Old browsers */
  background: -moz-linear-gradient(top,  $top 0%, $bottom 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,$top), color-stop(100%,$bottom)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  $top 0%,$bottom 100%); /* Chrome10+, Safari5.1+ */
  background: -o-linear-gradient(top,  $top 0%,$bottom 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  $top 0%,$bottom 100%); /* IE10+ */
  background: linear-gradient(to bottom,  $top 0%,$bottom 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='$top', endColorstr='$bottom',GradientType=0 ); /* IE6-9 */
}

@mixin animate($properties, $duration) {
  -webkit-transition-property: $properties;
  -moz-transition-property:    $properties;
  -ms-transition-property:     $properties;
  -o-transition-property:      $properties;
  transition-property:         $properties;
  -webkit-transition-duration: $duration;
  -moz-transition-duration:    $duration;
  -ms-transition-duration:     $duration;
  -o-transition-duration:      $duration;
  transition-duration:         $duration;
}

/* Helper classes */

.clearfix {
  *zoom: 1;
  &:before,
  &:after {
    display: table;
    content: "";
    line-height: 0;
  }
  &:after {
    clear: both;
  }
}

.hidden {
  display: none;
}

.muted {
  color: $color-muted;
}

.right {
  text-align: right;
}

.full-width {
  width: 100%;
  /* NOTE: home.js.coffee automatically makes YouTube videos full-width and preserves their aspect ratio */
}

@media (min-width: ($stack-width / 2)) {
  .small-phone-visible {
    display: none;
  }
}

/* Body */

html, body {
  margin: 0;
  padding: 0;
  height: 100%;
}

body {
  font-family: "Open Sans", sans-serif;
  font-weight: 400;
  font-size: 0.95em;
  line-height: 1.5;
  color: $color;
}

#footer-fix-container {
  min-height: 100%;
  position: relative;
}

.gutters {
  padding: 0 4%;
}

::selection {
  background: $color-selection; /* Safari */
}

::-moz-selection {
  background: $color-selection; /* Firefox */
}

* {
  -webkit-box-sizing: border-box;
  -moz-box-sizing:    border-box;
  box-sizing:         border-box;
  word-wrap: break-word;
}

/* Anchors */

a {
  color: $color-anchor;
  text-decoration: none;
  @include animate("color, background-color", 0.3s);

  &:hover {
    color: $color-anchor-hover;
    text-decoration: underline;
  }
}

a.tag {
  display: inline-block;
  padding: 0px 4px;
  background-color: $color-anchor;
  color: #fff;
  font-size: 0.8em;
  font-weight: 600;
  white-space: nowrap;
  text-shadow: rgba(0, 0, 0, 0.3) 0px -1px 0px;
  line-height: 1.6;

  &:hover {
    background-color: $color-anchor-hover;
    text-decoration: none;
  }
}

/* Block-level elements */

.p, ul, ol, form, table {
  margin: 16px 0;
}

h2, h3, h4, h5, h6 {
  font-weight: 300;
  margin: 16px 0;

  a {
    font-weight: 300;

    &:hover {
      text-decoration: none;
    }
  }
}

h2 {
  font-size: 2em;
  line-height: 1.2;
  text-transform: uppercase;

  a {
    color: inherit;
  }
}

h3 {
  font-size: 1.5em;
  margin-top: 48px;
  text-transform: uppercase;
}

h4 {
  font-size: 1em;
  margin-top: 32px;
  color: $color-light;
  text-transform: uppercase;
}

code, pre, .monospace {
  font-family: "Droid Sans Mono", "Monaco", "Lucida Console", "Terminal", sans-serif;
  font-size: 0.9em;
}

pre {
  margin: 16px 0;
  padding: 16px 24px;
  background-color: $color-light-background;
  white-space: pre;
  overflow: auto;
  max-height: 600px;
}

blockquote {
  font-style: italic;
  border-left: 4px solid $color-light-background;
  padding-left: 20px;
  margin: 0 0 0 20px;
  color: $color-light;
}

.notice, .error {
  padding: 16px 24px;
  background-color: #f3f3f3;
  margin: 32px 0;

  .close-container {
    float: right;

    a {
      color: inherit;

      &:hover {
        color: $color-anchor-hover;
      }
    }
  }
}

ul {
  list-style-type: square;
}

ul, ol {
  padding-left: 25px;
}

label {
  cursor: pointer;
}

ul.pagination {
  $page-link-width:  36px;
  $page-link-height: 32px;

  padding-left: 0;
  margin: 24px auto;
  max-width: 100%;

  li {
    display: block;
    width: $page-link-width + 2;
    height: $page-link-height + 2;
    float: left;
    text-align: center;
    border: 1px solid #ddd;
    margin: 8px -1px 8px 0;

    &:last-child {
      margin-right: 0;
      width: $page-link-width + 2;
    }

    &.disabled a, &.disabled span {
      color: #999;
    }

    &.active a, &.active span {
      background-color: #f2f2f2;
      color: #999;
    }

    a, span {
      display: block;
      width: $page-link-width;
      height: $page-link-height;
      line-height: $page-link-height;
    }
  }
}

/* Inline elements */

strong {
  font-weight: 600;
}

.article {
  .p {
    img, video {
      display: inline-block;
      vertical-align: middle;
      border-width: 0;
      width: 100%;
    }
  }
}

iframe {
  border: none;
}

input[type=submit], input[type=text], input[type=password], textarea, .button-link {
  display: inline-block;
  font-family: inherit;
  font-weight: inherit;
  font-size: inherit;
}

input[type=text], input[type=password], textarea {
  border: 1px solid #ddd;
  padding: 7px 10px;
  color: inherit;
  background-color: #fff;
}

input[type=submit], .button-link {
  border-style: none;
  padding: 0 16px;
  color: #fff;
  background-color: $color-anchor;
  text-shadow: rgba(0, 0, 0, 0.3) 0px -1px 0px;
  font-weight: 600;
  line-height: $input-height;
  @include animate(background-color, 0.3s);

  &:hover {
    background-color: $color-anchor-hover;
    text-decoration: none;
    color: #fff;
  }
}

input, .button-link {
  height: $input-height;
  vertical-align: middle;
}

textarea {
  display: inline-block;
  resize: vertical;
}

textarea:focus, input:focus {
  outline: 0;
}

code {
  display: inline-block;
  padding: 0 4px;
  background-color: $color-light-background;
}

form {
  display: inline;
}

/* Header */

#header {
  $header-height: 32px;
  $header-padding: 24px;
  $header-link-border-width: 4px;
  $header-link-border-color: #eee;
  line-height: $header-height;
  padding-top: $header-padding;
  padding-bottom: $header-padding;
  @media (max-width: ($stack-width - 1)) {
    padding-top: $header-padding / 2;
    padding-bottom: $header-padding / 2;
  }

  #title {
    @media (max-width: ($stack-width - 1)) {
      border-bottom: 1px solid #ccc;
      text-align: center;
      line-height: $header-height * 1.5;
    }

    h1 {
      font-family: "Lovers Quarrel", cursive;
      font-weight: 300;
      font-size: 3em;
      text-transform: inherit;
      line-height: inherit;
      margin: $header-link-border-width 0;
      a {
        font-weight: 400;
        display: inline-block;
        color: inherit;
        &:hover {
          color: $color-anchor-hover;
          text-decoration: none;
        }
      }

      a#title-link {
        &:hover {
          color: $color-anchor-hover;
        }
      }
    }
  }

  #nav {
    text-align: right;
    font-size: 0.85em;
    font-weight: 400;

    @media (max-width: ($stack-width - 1)) {
      text-align: center;
    }

    a {
      text-transform: uppercase;
      display: inline-block;
      color: inherit;
      padding: 0 16px;
      margin: $header-link-border-width 0;
      @media (max-width: ($stack-width - 1)) {
        & {
          padding: 0 5px;
        }
      }
      &:hover {
        color: $color-anchor-hover;
        text-decoration: none;
      }
    }

    a.active {
      border-bottom: $header-link-border-width solid $header-link-border-color;
      margin-bottom: 0;
      &:hover {
        color: $color-anchor-hover;
      }
    }
  }
}

/* Banner */

div.banner-body {
  background-color: #f3f3f3;
  padding: 16px 0;

  .social-media-links {
    a {
      color: inherit;
      font-size: 1.2em;

      &:hover {
        color: $color-anchor-hover;
        text-decoration: none;
      }
    }
  }

  h2 {
    font-size: 1.5em;

    a {
      color: inherit;

      &:hover {
        color: $color-anchor-hover;
        text-decoration: none;
      }
    }
  }
}

/* Separators */

div.page-separator {
  background-color: #f3f3f3;
  height: $separator-height;
}

div.post-separator {
  background-color: #f3f3f3;
  height: 2px;
}

/* Articles */

#content {
  padding-bottom: $footer-height;
  overflow-x: auto;

  .article {
    margin: 48px 0 48px 0;

    .MathJax_Display {
      overflow-x: auto;
      overflow-y: hidden;
    }

    .previous-post {
      text-align: left;
    }

    .next-post {
      text-align: right;
    }

    .social-media-share {
      .social-media-link {
        display: inline-block;
        height: 20px;
        line-height: 20px;
        vertical-align: middle;

        & > * {
          line-height: 0px;
          vertical-align: top;
        }
      }

      .fb-like {
        margin-right: 35px;
      }
    }

    @media (max-width: ($stack-width - 1)) {
      .previous-post, .next-post {
        text-align: center;
      }
    }
  }
}

/* Footer */

#footer-container {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: $footer-height;
  color: $color-muted;
  text-align: center;

  #footer .p {
    line-height: $footer-height - $separator-height;
    margin: 0;
  }
}
