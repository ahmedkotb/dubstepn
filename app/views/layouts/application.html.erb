<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title><%= content_for :title %></title>
    <% if (content_for :description) != "" %>
      <meta name="description" content="<%= content_for :description %>">
    <% end %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="<%= request.protocol -%>fonts.googleapis.com/css?family=Oswald:300,400" rel="stylesheet" type="text/css">
    <link href="<%= request.protocol -%>fonts.googleapis.com/css?family=Droid+Sans+Mono" rel="stylesheet" type="text/css">
    <% if request.protocol == "https://" %>
      <script type="text/javascript" src="https://c328740.ssl.cf1.rackcdn.com/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
    <% else %>
      <script type="text/javascript" src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
    <% end %>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= content_for :head %>
  </head>
  <body>
    <div id="header-container">
      <div class="container" id="header">
        <div class="container-spacer">
          <div class="row">
            <div id="title" class="span4">
              <h1>
                <a href="/" id="title-link">Stephan Boyer</a>
                <%= content_for :nav %>
                <% if is_logged_in %>
                  <%= form_tag("/logout", :method => "post") do %>
                    (<a href="/admin">admin panel</a>, <a href="#" onclick="$(this).parent().submit(); return false;">logout</a>)
                  <% end %>
                <% end %>
              </h1>
            </div>
            <div id="nav" class="span8">
              <a <%= if !(defined? @tag_name) || !@tag_name || @tag_name == "home" then "class='active'".html_safe else "" end -%> href="/">Home</a><span class="hidden">
              </span><a <%= if (defined? @tag_name) && @tag_name == "theory" then "class='active'".html_safe else "" end -%> href="/theory">Theory</a><span class="hidden">
              </span><a <%= if (defined? @tag_name) && @tag_name == "projects" then "class='active'".html_safe else "" end -%> href="/projects">Projects</a><span class="hidden">
              </span><a <%= if (defined? @tag_name) && @tag_name == "music" then "class='active'".html_safe else "" end -%> href="/music">Music</a><span class="hidden">
              </span><a href="/resume">Resume</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="content-container">
      <div class="container" id="content">
        <div class="container-spacer">
          <div class="row">
            <div id="sidebar" class="span4 phone-hidden">
              <% for post in @sidebar_posts %>
                <%= render :partial => "post", :locals => { :post => post, :previous_post => nil, :next_post => nil, :comments_mode => nil, :show_tags => false, :show_date => false, :title_link => false } %>
              <% end %>
            </div>
            <div id="articles" class="span8">
              <% if flash[:notice] %>
                <div class="article">
                  <div class="notice">
                    <%= flash[:notice] %>
                  </div>
                </div>
              <% end %>
              <% if flash[:error] %>
                <div class="article">
                  <div class="error">
                    <%= flash[:error] %>
                  </div>
                </div>
              <% end %>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="footer-container">
      <div class="container" id="footer">
        <div class="container-spacer">
          <p>&copy; <%= Time.new.year %> Stephan Boyer.  All rights reserved.
        </div>
      </div>
    </div>

    <div class="loading-cover">
      <div class="loading-spinner-container">
        <%= image_tag "spinner.svg", :class => "loading-spinner" %>
      </div>
    </div>
    <% if Rails.env.production? && !is_logged_in %>
      <script type="text/javascript">
        var disqus_shortname = 'stephanboyer';
        (function () {
          var s = document.createElement('script'); s.async = true;
          s.type = 'text/javascript';
          s.src = '<%= request.protocol -%>' + disqus_shortname + '.disqus.com/count.js';
          (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
        }());
      </script>
      <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-34278795-1']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
    <% end %>
  </body>
</html>
