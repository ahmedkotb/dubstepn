<% content_for :head do %>
  <%= stylesheet_link_tag    "index" %>
  <%= javascript_include_tag "index" %>
<% end %>

<% if @tag.name == "home" %>
  <% content_for :title, "Stephan Boyer" %>
  <% content_for :description, APP_DESCRIPTION %>
<% else %>
  <% content_for :title, @tag.name.capitalize + " | Stephan Boyer" %>
  <% content_for :description, APP_DESCRIPTION + "  Category: " + @tag.name + "." %>

  <% content_for :nav do %>
    / <a href="/<%= @tag.name %>"><%= @tag.name %></a>
  <% end %>
<% end %>

<div>
  <% for post in @posts %>
    <%= render :partial => "post", :locals => { :post => post, :previous_post => nil, :next_post => nil, :comments_mode => :count, :show_tags => true, :show_date => true, :title_link => true } %>
  <% end %>
</div>

<div id="pagination_container">
  <div class="pagination">
    <ul>
      <% if @page > 1 %>
        <li><a href="/<%= @tag.name -%>/1">&laquo;</a></li>
      <% else %>
        <li class="disabled"><span>&laquo;</span></li>
      <% end %>
      <% for page in 1..@pages %>
        <% if page == @page %>
          <li class="active"><span><%= page %></span></li>
        <% else %>
          <li><a href="/<%= @tag.name -%>/<%= page -%>"><%= page %></a></li>
        <% end %>
      <% end %>
      <% if @page < @pages %>
        <li><a href="/<%= @tag.name -%>/<%= @pages -%>">&raquo;</a></li>
      <% else %>
        <li class="disabled"><span>&raquo;</span></li>
      <% end %>
    </ul>
  </div>
</div>
