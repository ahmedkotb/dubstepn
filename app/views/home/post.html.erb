<% content_for :head do %>
  <%= stylesheet_link_tag    "index" %>
  <%= javascript_include_tag "index" %>
<% end %>

<% content_for :title, @post.title + " | Stephan Boyer" %>
<% content_for :description, @post.summary %>

<%= render :partial => "post", :locals => { :post => @post, :previous_post => @previous, :next_post => @next, :comments_mode => :full, :show_tags => true, :show_date => true, :title_link => true } %>