<% content_for :head do %>
  <%= stylesheet_link_tag    "index" %>
  <%= javascript_include_tag "index" %>
<% end %>

<% if @post && (@post.is_public || @logged_in) %>
  <% content_for :title, @post.title + " | Stephan Boyer" %>
<% else %>
  <% content_for :title, "Stephan Boyer" %>
<% end %>

<% if @post && (@post.is_public || @logged_in) %>
  <%= render :partial => "post", :locals => { :post => @post, :previous_post => @previous, :next_post => @next, :comments_mode => :full, :date_mode => :date, :title_link => true } %>
<% else %>
  <article>
    <h2>Sorry, that page doesn&rsquo;t exist.</h2>
    <p>Make sure you typed the URL correctly.</p>
  </article>
<% end %>
