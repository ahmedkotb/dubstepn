<% content_for :head do %>
  <%= stylesheet_link_tag    "edit_post" %>
  <%= javascript_include_tag "edit_post" %>
<% end %>

<h2>Admin Panel</h2>
<p><a href="/admin">Back to Admin Panel</a></p>

<h3>Edit Post</h3>
<%= form_tag("/edit_post", :method => "post") do %>
  <p><input type="hidden"                                     name="post_id" value="<%= @post.id %>" /></p>
  <p><input type="text" placeholder="Title"                   name="post_title" value="<%= @post.title %>" /></p>
  <p><textarea cols="40" placeholder="Content" rows="5"       name="post_content"><%= @post.content %></textarea></p>
  <p><input type="checkbox"                                   name="post_is_public" id="post_is_public" <%= if @post.is_public then "checked" else "" end %> /> <label for="post_is_public">Public</label></p>
  <p><input type="submit" value="Save" id="save_button" /></p>
<% end %>