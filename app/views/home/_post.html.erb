<%
  # locals:
  #   post            post
  #   previous_post   [post, nil]
  #   next_post       [post, nil]
  #   comments_mode   [:full, :count, nil]
  #   show_tags       boolean
  #   show_date       boolean
  #   title_link      boolean
%>

<div class="article">
  <% if post.css != "" %>
    <style type="text/css">
      <%= raw(post.css) %>
    </style>
  <% end %>

  <% if title_link %>
    <h2><a href="<%= post.canonical_uri %>"><%= post.title %></a><%= if post.is_public then "" else " (hidden)" end %></h2>
  <% else %>
    <h2><%= post.title %><%= if post.is_public then "" else raw(" <span class=\"muted\">(hidden)</span>") end %></h2>
  <% end %>

  <% if show_date %>
    <p class="muted">
      Posted on <%= post.created_at.strftime("%B %e, %Y") %>.
    </p>
  <% end %>

  <%= raw(post.content_html) %>

  <% if show_tags and post.tags.size > 0 %>
    <p>
      Tags:&nbsp;
      <% for tag in post.tags %>
        <a href="/<%= if tag.name == "home" then "" else tag.name end -%>" class="tag"><%= tag.name -%></a>
      <% end %>
    </p>
  <% end %>

  <% if previous_post || next_post %>
    <div class="row p">
      <% if previous_post %>
        <div class="span6 previous-post">
          <a href="<%= previous_post.canonical_uri -%>">« <%= previous_post.title -%></a>
        </div>
      <% end %>
      <% if next_post %>
        <div class="span6 next-post <%= if previous_post then "" else "offset6" end -%>">
          <a href="<%= next_post.canonical_uri -%>"><%= next_post.title -%> »</a>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if comments_mode == :full %>
    <% if Rails.env.production? && !is_logged_in %>
      <div>
        <div id="disqus_thread"></div>
        <script type="text/javascript">
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = 'stephanboyer'; // required: replace example with your forum shortname

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '<%= request.protocol -%>' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
      </div>
    <% else %>
      <p><span class="muted">&lt;comments&gt;</span></p>
    <% end %>
  <% elsif comments_mode == :count %>
    <% if Rails.env.production? && !is_logged_in %>
      <p><a href="<%= "#{request.protocol}#{request.host_with_port}" %><%= post.canonical_uri %>#disqus_thread">Comments</a></p>
    <% else %>
      <p><span class="muted">&lt;number of comments&gt;</span></p>
    <% end %>
  <% end %>

  <% if post.javascript != "" %>
    <script type="text/javascript">
      <%= raw(post.javascript) %>
    </script>
  <% end %>
</div>
